String input;
int seqnum = 0;
int maxnum = 0;
while(seqnum != -1) {
	println("Please enter the next positive number of the sequence:"); 
	input = System.console().readLine();
	seqnum = Integer.parseInt(input);
	if(seqnum < -1) {
		print("Please do not enter negative values"); 
	}
	if(maxnum == 0 || seqnum > maxnum) {
		maxnum = seqnum;
	}
}
